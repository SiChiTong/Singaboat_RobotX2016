<launch>
    <include file="$(find robotx_vision)/launch/camshift_color.launch" >
        <arg name="input_rgb_image" default="image_rect_color" />
        <arg name="roi" default="roi" />
        <arg name="namespace" default="bow/left" />
        <arg name="objectname" default="totem" />
        <arg name="color_under_detect" default="red" />
    </include>
    <include file="$(find robotx_vision)/launch/camshift_color.launch" >
        <arg name="input_rgb_image" default="image_rect_color" />
        <arg name="roi" default="roi" />
        <arg name="namespace" default="bow/right" />
        <arg name="objectname" default="totem" />
        <arg name="color_under_detect" default="red" />
    </include>
    <include file="$(find robotx_vision)/launch/camshift_color.launch" >
        <arg name="input_rgb_image" default="image_rect_color" />
        <arg name="roi" default="roi" />
        <arg name="namespace" default="bow/left" />
        <arg name="objectname" default="totem" />
        <arg name="color_under_detect" default="green" />
    </include>
    <include file="$(find robotx_vision)/launch/camshift_color.launch" >
        <arg name="input_rgb_image" default="image_rect_color" />
        <arg name="roi" default="roi" />
        <arg name="namespace" default="bow/right" />
        <arg name="objectname" default="totem" />
        <arg name="color_under_detect" default="green" />
    </include>

    <node pkg="robotx_nav" name="bow_left_red_pub" type="roi_coordinate.py" output="screen">
        <param name="namespace" value="bow/left" />
        <param name="colorname" value="red" />
    </node>
    <node pkg="robotx_nav" name="bow_right_red_pub" type="roi_coordinate.py" output="screen">
        <param name="namespace" value="bow/right" />
        <param name="colorname" value="red" />
    </node>
    <node pkg="robotx_nav" name="bow_left_green_pub" type="roi_coordinate.py" output="screen">
        <param name="namespace" value="bow/left" />
        <param name="colorname" value="green" />
    </node>
    <node pkg="robotx_nav" name="bow_right_green_pub" type="roi_coordinate.py" output="screen">
        <param name="namespace" value="bow/right" />
        <param name="colorname" value="green" />
    </node>
</launch>
