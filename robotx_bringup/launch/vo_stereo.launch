<launch>

    <param name="/use_sim_time" value="true"/>

    <!-- Camera calibration parameters -->
    <arg name="disparity_params" default="$(find robotx_bringup)/config/disparity_params.yaml"/> 

    <!-- stereo-image-proc -->
    <include file="$(find robotx_bringup)/launch/stereo_proc.launch" />

    <!-- Viso2 -->
    <node pkg="viso2_ros" type="stereo_odometer" name="bow_stereo_odometer" output="screen">
        <param name="match_disp_tolerance" value="50" />
        <remap from="stereo" to="bow_stereo"/>
        <remap from="image" to="image_rect"/>
        <remap from="odometry" to="bow_stereo/odometry" />
        <param name="odom_frame_id" value="odom" />
        <!--param name="base_link_frame_id" value="bow_stereo/camera_link" /-->
        <param name="publish_tf" value="false" />
    </node>
</launch>
